<% include partials/header.ejs %>
<div class="container">
    <div class="row">
        <div class="courses col-lg-6 col-md-12">
            <h3 class="section">Courses</h3>
            <% if(currentUser && currentUser.isAdmin){ %>
            <a role="button" class="addbutton btn btn-default btn-primary" href="/subjects/new">Add a subject</a>
            <% } %>
            <hr style="margin-top: 0px">

            <% subjects.forEach(function(subject){ %>
            <div class="row">
                <div class="col-lg-4">
                    <a href="/<%= subject.name %>">
                        <div class="thumbnail">
                            <img class="mycirimg" src="<%= subject.image %>">
                        </div>
                    </a>
                </div>
                <div class="intro col-lg-8">
                    <a href="/<%= subject.name %>" style="text-align: center;">
                        <h4 id="subject"><%= subject.name.toUpperCase() %></h4>
                        <p id="quote" style="font-size: 12px"><%= subject.quote %></p>
                        <p id="author"><%= subject.author %></p>
                    </a>
                </div>
                <hr class="col-lg-11" style="border-top:1px dotted black; margin:0px; align:center">
            </div>
            <% }) %>

            <!--<div class="col-lg-4">-->
            <!--<div class="thumbnail">-->
            <!--<img class="cirimg" src="comingsoon.jpg">-->
            <!--</div>-->
            <!--</div>-->
            <!--<div class="col-lg-8">-->
            <!--<div>-->
            <!--<h4 id="subject">COMING SOON</h4>-->
            <!--</div>-->
            <!--</div>-->
            <a class="col-lg-12" href="/courses" style="margin-bottom: 20px;">More...</a>
        </div>


        <div class="reviews col-lg-4 col-md-12">
            <h3 class="section"><a style="color:black" href="/reviews">Articles & Reviews</a></h3>
            <% if(currentUser && currentUser.isAdmin){ %>
            <a role="button" class="addbutton btn btn-default btn-primary" href="/reviews/new">Add a review</a>
            <% } %>

            <hr style="margin-top: 0px; margin-bottom: 10px;">

            <% reviews.forEach(function(review){ %>

            <div class="col-lg-12">
                <a href="/reviews/<%= review._id %>">
                    <h4 style="margin-top: 17px; color:black;"><%= review.title %></h4>
                </a>
            </div>
            <div class="col-lg-12">
                <h6 style="margin: 5px 0px 0px 0px;"><%= review.paper %></h6>
            </div>


            <hr class="col-lg-11"
                style="border-top:1px dotted black; align:center; margin-top: 15px; margin-bottom: 0px">
            <% }) %>

            <a role="button" class="col-lg-12" href="/reviews">More...</a>
        </div>


        <div class="Links col-lg-2 col-md-12">

            <h3 class="section">Links</h3>
            <hr style="margin-top: 0px">

            <a href="https://www.youtube.com/channel/UC45PmK55T7J_G6-ejkFO4hw">
                <div class="thumbnail">
                    <img class="banner" src="youtubebanner.jpg">
                </div>
            </a>

            <a href="https://github.com/MTLChrisLEE">
                <div class="thumbnail">
                    <img class="banner" src="githubbanner.jpg">
                </div>
            </a>

            <a href="https://stackoverflow.com/">
                <div class="thumbnail">
                    <img class="banner" src="stackoverflowbanner.jpg">
                </div>
            </a>

            <a href="https://techcrunch.com/">
                <div class="thumbnail">
                    <img class="banner" src="TechCrunchbanner.jpg">
                </div>
            </a>
        </div>

    </div>
</div>

